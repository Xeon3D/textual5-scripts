-- lv - A Latest Version Announcer Script for Textual-- Coded by Xeon3D-- 2 step Installation:-- Copy this to ~/Library/Application Support/Textual IRC/Scripts/-- or ~/Library/Containers/com.codeux.irc.textual/Data/Library/Application Support/Textual IRC/Scripts/ -- if you're using the sandbox / App Store version.-- | SCRIPT START | ---- |Properties| --property RepositoryURL : "http://xeon3d.net/textual/scripts/"property RepositoryContentsURL : RepositoryURL & "scripts.lst"property Echo : "/echo "on textualcmd(cmd)		-- |Variables| --		set FBold to (ASCII character 2)	set FItalic to (ASCII character 1)	set NewLine to (ASCII character 10)	set msg to "Latest Script Versions:"		-- Get Script Manager latest version since it doesn't use 	-- the same URL schema as the rest.	set smlatest to do shell script "curl http://xeon3d.net/textual/sm/latest"	set msg to msg & " sm " & smlatest & " /"		-- Get Repo's script names and versions.	set AppleScript's text item delimiters to return	do shell script "curl " & RepositoryContentsURL	set allScripts to result	set AppleScript's text item delimiters to ""	set AvailableScripts to the paragraphs of allScripts	repeat with i from 1 to the count of AvailableScripts		set currentItem to get item i of AvailableScripts as string		set AppleScript's text item delimiters to ";"		set ItemName to first word of currentItem		set ItemVersion to second word of currentItem		set ItemDescription to text items 3 thru -2 of currentItem		set ItemChecksum to the last text item of currentItem		set AppleScript's text item delimiters to ""		set msg to msg & " " & ItemName & " " & ItemVersion & " /"	end repeat		-- remove last "/"	set msg to characters 1 thru -3 of msg as string	-- spill the beans...	return msg	end textualcmd